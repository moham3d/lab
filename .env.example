# Patient Visit Management System - Environment Configuration
# Copy this file to .env and update the values for your environment

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Project Information
PROJECT_NAME=Patient Visit Management System
VERSION=1.0.0
DESCRIPTION=Healthcare backend API for patient visit management

# API Configuration
API_V1_STR=/api/v1

# ===========================================
# SECURITY SETTINGS
# ===========================================

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ===========================================
# DATABASE SETTINGS
# ===========================================

# PostgreSQL Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=patient_user
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_DB=patient_visits
POSTGRES_PORT=5432

# Database Connection URL (alternative to individual settings above)
# DATABASE_URL=postgresql+asyncpg://patient_user:password@localhost:5432/patient_visits

# ===========================================
# REDIS SETTINGS
# ===========================================

# Redis Configuration
REDIS_URL=redis://localhost:6379

# ===========================================
# CORS SETTINGS
# ===========================================

# CORS Origins (comma-separated list)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://localhost:3000,https://localhost:8080

# ===========================================
# TRUSTED HOSTS
# ===========================================

# Allowed Hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================

# Upload Configuration
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# ===========================================
# HIPAA COMPLIANCE
# ===========================================

# Encryption Key (generate a new one for production)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Audit Log Retention (days)
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years

# ===========================================
# EMAIL SETTINGS (Optional)
# ===========================================

# SMTP Configuration
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# ===========================================
# CELERY SETTINGS
# ===========================================

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# PRODUCTION SETTINGS
# ===========================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode
DEBUG=true

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===========================================
# MONITORING & METRICS
# ===========================================

# Enable Prometheus Metrics
ENABLE_METRICS=false

# Metrics Port
METRICS_PORT=9090

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# External API Keys (if needed)
# OPENAI_API_KEY=
# STRIPE_SECRET_KEY=
# SENDGRID_API_KEY=

# ===========================================
# SECURITY HEADERS
# ===========================================

# Content Security Policy
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self'; media-src 'self'; object-src 'none'; frame-ancestors 'none'; base-uri 'self'; form-action 'self';

# ===========================================
# RATE LIMITING
# ===========================================

# Requests per minute
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ===========================================
# BACKUP SETTINGS
# ===========================================

# Database Backup
DB_BACKUP_ENABLED=false
DB_BACKUP_SCHEDULE=0 4 * * *  # Daily at 4 AM
DB_BACKUP_RETENTION_DAYS=30

# ===========================================
# SSL/TLS SETTINGS
# ===========================================

# SSL Certificate Paths (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# ===========================================
# MONITORING & ALERTS
# ===========================================

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Alert Email
ALERT_EMAIL=admin@yourdomain.com

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Hot Reload
RELOAD=true

# Development Database
DEV_DATABASE_URL=sqlite:///./dev.db

# Test Database
TEST_DATABASE_URL=sqlite:///./test.db