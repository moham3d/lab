{
  "name": "healthcare-frontend",
  "version": "1.0.0",
  "description": "Healthcare Patient Management System Frontend",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build:css:once && node server.js",
    "dev:watch": "npm run build:css & npm run dev:server",
    "dev:server": "node server.js",
    "dev:live": "live-server --port=3000 --host=0.0.0.0",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./public/styles/main.css --watch",
    "build:css:once": "tailwindcss -i ./src/styles/main.css -o ./public/styles/main.css",
    "build": "npm run build:css:once",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.{js,html,css}"
  },
  "keywords": [
    "healthcare",
    "htmx",
    "alpinejs",
    "tailwindcss"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.8.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "alpinejs": "^3.15.0",
    "express": "^4.21.2",
    "htmx.org": "^1.9.12",
    "http-proxy-middleware": "^2.0.9",
    "tailwindcss": "^3.4.17"
  }
}
